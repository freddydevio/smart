
<div class="widget {{ options.size }} news-widget">
    <div class="columns">
        <span class="widget--title">Nachrichten</span>
        <div class="content">
            <div class="columns">
                {% for newsItem in widget.data %}
                    <div class="row">
                        <i class="zmdi zmdi-rss"></i>
                        <span class="title">{{ newsItem.title }}</span>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

